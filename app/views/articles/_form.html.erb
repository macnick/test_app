
<%= render 'shared/errors', obj: @article %>


<div class="row">
  <div class="col-xs-12">
  <%= form_with(model: article, local: true, :html => {class: "form-horizontal"}) do |form| %>
      <div class="form-group">
        <div class="field control-label col-xs-2">
          <%= form.label :title %>
        </div>
        <div class="col-xs-10">
          <%= form.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="field control-label col-xs-2">
          <%= form.label :description %>
        </div>
        <div class="col-xs-10">
          <%= form.text_area :description, rows: 8, class: "form-control", placeholder: "Body of article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="actions col-xs-offset-2 col-xs-10">
          <%= form.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>

  </div>
</div>