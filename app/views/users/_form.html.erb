
<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
  <%= form_with(model: @user, local: true, :html => {class: "form-horizontal"}) do |form| %>
      <div class="form-group">
        <div class="field control-label col-xs-2">
          <%= form.label :username %>
        </div>
        <div class="col-xs-10">
          <%= form.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="field control-label col-xs-2">
          <%= form.label :email %>
        </div>
        <div class="col-xs-10">
          <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="field control-label col-xs-2">
          <%= form.label :password %>
        </div>
        <div class="col-xs-10">
          <%= form.password_field :password, rows: 8, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="actions col-xs-offset-2 col-xs-10">
          <%= form.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>

  </div>
</div>